@using MVC_MİMARİSİ.Models.EntityFrameWork;
@model List<TBL_OGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>
            ÖĞRENCİ ID
        </th>
        <th>
            ÖĞRENCİ AD
        </th>
        <th>
            ÖĞRENCİ SOYAD
        </th>
        <th>
            CİNSİYET
        </th>
        <th>
            KULÜP
        </th>
        <th>İŞLEMLER</th>

    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {

            <tr>
                <td>@ogr.OGRIID</td>
                <td>@ogr.OGRAD</td>
                <td>@ogr.OGRSOYAD</td>
                <td>@ogr.OGRCINSIYET</td>
                <td>@ogr.OGRKULUP</td>
                
                <td>
                    <a href="/Ogrenci/Sil/@ogr.OGRIID" class="btn btn-danger">SİL</a>
                    <a href="/Ogrenci/OgrenciGetir/@ogr.OGRIID" class="btn btn-success">GÜNCELLE</a>
                </td>

            </tr>
        }
    </tbody>

</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>


