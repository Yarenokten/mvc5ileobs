@using MVC_MİMARİSİ.Models.EntityFrameWork;
@model List<TBL_NOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>
            NOT ID
        </th>
        <th>
            ÖĞRENCİ
        </th>
        <th>
            DERS
        </th>
        <th>
            SINAV1
        </th>
        <th>
            SINAV2
        </th>
        <th>
            SINAV3
        </th>
        <th>
            PROJE
        </th>
        <th>
            ORTALAMA
        </th>
        <th>
            DURUM
        </th>
        <th>
            GÜNCELLE
        </th>

    </tr>
    <tbody>
        @foreach (var NOT in Model)
        {

            <tr>
                <td>@NOT.NOTID</td>
                <td>@NOT.TBL_OGRENCILER.OGRAD</td>
                <td>@NOT.TBL_DERSLER.DERSAD</td>
                <td>@NOT.SINAV1</td>
                <td>@NOT.SINAV2</td>
                <td>@NOT.SINAV3</td>
                <td>@NOT.PROJE</td>
                <td>@NOT.ORTALAMA</td>
                <td>@NOT.DURUM</td>
                <td><a href="/Notlar/NotGetir/@NOT.NOTID" class="btn btn-warning"> GÜNCELLE</a>
               <a href="/Notlar/NotSil/@NOT.NOTID" class="btn btn-danger"> SİL</a></td>

            </tr>
        }
    </tbody>

</table>
<a href="/Notlar/YeniSinav" class="btn btn-primary">Yeni Not Girişi</a>




